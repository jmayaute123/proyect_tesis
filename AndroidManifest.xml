<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ro.ui.pttdroid"
      android:versionName="1.5" android:versionCode="3">
      
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="18" />
      
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application 
        android:icon="@drawable/ic_launcher" 
        android:label="@string/app_name" 
        android:allowBackup="true">
        
        <activity 
            android:name=".Main" 
            android:label="@string/app_name" 
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Probando"></activity>
        <activity android:name="Presentacion"></activity>
        <activity android:name="ClienteIntro"></activity>
        <activity android:name="ServerProcess"></activity>
        <activity android:name="ServerIntro"></activity>
        <activity android:name="ClienteArchivos"></activity>
        <activity android:name="ClienteMain"></activity>
        <activity android:name="ServerMain"></activity>
        <activity android:name="ClienteProcess"></activity>
        <activity 
            android:name=".settings.CommSettings" 
            android:label="@string/settings_comm_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">        	
        </activity>

        <activity 
            android:name=".settings.AudioSettings" 
            android:label="@string/settings_audio_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">        	
        </activity>
                        
	</application>    

</manifest> 